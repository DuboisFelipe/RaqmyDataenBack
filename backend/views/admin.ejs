<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Panel de Administración - Raqmy Dataen</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Poppins', sans-serif; }
  </style>
</head>
<body class="bg-gray-50 min-h-screen">
  <!-- Header -->
  <header class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-bold text-blue-600">Panel de Administración</h1>
        <p class="text-sm text-gray-600">Raqmy Dataen</p>
      </div>
      <div class="flex items-center gap-4">
        <span class="text-gray-700">Bienvenido, <strong><%= username %></strong></span>
        <a 
          href="/admin/logout"
          class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition shadow hover:shadow-lg text-sm"
        >
          Cerrar Sesión
        </a>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Messages Table -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Nombre</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Email</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Teléfono</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Acciones</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Fecha</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (mensajes.length === 0) { %>
              <tr>
                <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                  No se encontraron mensajes
                </td>
              </tr>
            <% } else { %>
              <% mensajes.forEach(mensaje => { %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= mensaje.id %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= mensaje.nombre %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-blue-600"><%= mensaje.email %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= mensaje.telefono || '-' %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <!-- Using data attributes to avoid escaping issues -->
                    <button 
                      class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition shadow hover:shadow-lg text-xs"
                      data-id="<%= mensaje.id %>"
                      data-nombre="<%= mensaje.nombre %>"
                      data-mensaje="<%= mensaje.mensaje %>"
                      onclick="openModalFromButton(this)"
                    >
                      Ver Mensaje
                    </button>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= new Date(mensaje.fecha).toLocaleString('es-AR') %>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </main>

  <!-- Modal -->
  <div id="messageModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full max-h-[80vh] overflow-hidden">
      <!-- Modal Header -->
      <div class="bg-blue-600 text-white px-6 py-4 flex justify-between items-center">
        <h2 class="text-xl font-bold">Mensaje de <span id="modalNombre"></span></h2>
        <button onclick="closeModal()" class="text-white hover:text-gray-200 text-2xl font-bold">
          &times;
        </button>
      </div>
      
      <!-- Modal Body -->
      <div class="p-6 overflow-y-auto max-h-[60vh]">
        <div class="mb-4">
          <span class="text-sm text-gray-600 font-semibold">ID:</span>
          <span id="modalId" class="text-sm text-gray-900 ml-2"></span>
        </div>
        <div class="mb-4">
          <span class="text-sm text-gray-600 font-semibold">Mensaje:</span>
          <p id="modalMensaje" class="mt-2 text-gray-900 whitespace-pre-wrap"></p>
        </div>
      </div>
      
      <!-- Modal Footer -->
      <div class="bg-gray-50 px-6 py-4 flex justify-end">
        <button 
          onclick="closeModal()"
          class="bg-gray-600 text-white px-6 py-2 rounded-lg hover:bg-gray-700 transition shadow hover:shadow-lg"
        >
          Cerrar
        </button>
      </div>
    </div>
  </div>

  <!-- JavaScript to handle modal open/close -->
  <script>
    function openModalFromButton(button) {
      const id = button.getAttribute('data-id');
      const nombre = button.getAttribute('data-nombre');
      const mensaje = button.getAttribute('data-mensaje');
      openModal(id, nombre, mensaje);
    }

    function openModal(id, nombre, mensaje) {
      document.getElementById('modalId').textContent = id;
      document.getElementById('modalNombre').textContent = nombre;
      document.getElementById('modalMensaje').textContent = mensaje;
      document.getElementById('messageModal').classList.remove('hidden');
    }

    function closeModal() {
      document.getElementById('messageModal').classList.add('hidden');
    }

    // Close modal when clicking outside
    document.getElementById('messageModal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeModal();
      }
    });

    // Close modal with Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeModal();
      }
    });
  </script>
</body>
</html>
